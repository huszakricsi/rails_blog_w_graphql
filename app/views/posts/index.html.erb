<%= render partial: 'partials/search' %>
<br>
<table class="table table-hover">
<tr>
  <th>Title</th>
  <th>Tags</th>
  <th>Author</th>
  <th>Comments</th>
</tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post_path(post.id) %><td>
    <td><%= post.tags.map(&:name).join(', ') %><td>
    <td><%= post.author.username %><td>
    <td><%= post.comments.count %><td>
  </tr>
<% end %>
</table>

<%= paginate @posts %>
