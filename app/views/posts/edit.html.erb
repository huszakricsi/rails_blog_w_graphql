<td><%= link_to 'Back to posts', posts_path %><td>
<br>
<%= form_for @post, url: update_post_path_url(@post.id) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "title" %>
  <%= f.label :body %>
  <%= f.text_area :body, placeholder: "body" %>
  <%= f.label :tags %>
  <%= f.text_field :tag_names_array, {value: @post.tag_names_with_commas, placeholder: "tags"} %>
  <%= f.submit "Update Post" %>
<% end %>
